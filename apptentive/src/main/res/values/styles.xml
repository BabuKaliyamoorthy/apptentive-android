<resources>

    <!-- ApptentiveTheme is the theme used by all Apptentive UIs. It is default to Light Base Theme, if not provided by the app-->
    <style name="ApptentiveThemeOverride"/>

    <style name="ApptentiveTheme" parent="ApptentiveBaseTheme"/>

    <!-- Default theme used by Apptentive about -->
    <style name="ApptentiveTheme.About" parent="ApptentiveTheme">
        <item name="colorPrimary">@color/apptentive_red</item>
    </style>

    <style name="foo" parent="Widget.Design.Snackbar">
    </style>
    <!-- Base Theme-->
    <style name="ApptentiveBaseVersionBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="apptentiveTypeface">@integer/apptentive_typeface_sans</item>
        <item name="apptentiveFontFamily">@string/apptentive_fontfamily_sans_serif</item>

        <!-- Setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/apptentive_color_primary</item>
        <item name="colorPrimaryDark">@color/apptentive_color_primary_dark</item>
        <item name="colorAccent">@color/apptentive_color_accent</item>

        <item name="android:textColorPrimary">@color/apptentive_text_color_primary</item>
        <item name="android:textColorPrimaryInverse">@color/apptentive_text_color_primary_inverse</item>
        <item name="android:textColorSecondary">@color/apptentive_text_color_secondary</item>
        <item name="android:textColorSecondaryInverse">@color/apptentive_text_color_secondary_inverse</item>
        <item name="android:textColorHint">@color/apptentive_text_color_hint</item>
        <item name="android:textColorHintInverse">@color/apptentive_text_color_hint_inverse</item>

        <item name="apptentiveTextSizeHeadline">@dimen/apptentive_text_size_headline</item>
        <item name="apptentiveTextSizeTitle">@dimen/apptentive_text_size_title</item>
        <item name="apptentiveTextSizeSubheading">@dimen/apptentive_text_size_subheading</item>
        <item name="apptentiveTextSizeBody">@dimen/apptentive_text_size_body</item>
        <item name="apptentiveTextSizeCaption">@dimen/apptentive_text_size_caption</item>

        <!--<item name="android:textViewStyle">@style/Apptentive.Global.Widget.TextView</item>-->

        <!-- Apptentive Material specific values -->
        <item name="apptentiveViewBackground">@color/apptentive_view_background</item>
        <item name="apptentiveCardViewBackground">@color/apptentive_card_view_background</item>
        <item name="apptentiveValidationFailedColor">@color/apptentive_validation_failed_color</item>
        <item name="apptentiveColorSnackbar">@color/apptentive_color_snackbar</item>

        <item name="apptentive_material_disabled_text">@color/apptentive_material_disabled_text
        </item>
        <item name="apptentive_material_disabled_icon">@color/apptentive_material_disabled_icon</item>
        <item name="apptentive_material_divider">@color/apptentive_material_divider</item>
        <item name="apptentive_material_selected_text">@color/apptentive_material_selected_text</item>

        <!-- Here we set Apptentive widget styles -->
        <item name="apptentiveAvatarViewGreetingStyle">@style/Apptentive.Style.Widget.AvatarView.Greeting</item>
        <item name="apptentiveAvatarViewMessageStyle">@style/Apptentive.Style.Widget.AvatarView.Message</item>

        <item name="apptentiveMessageCenterBadgeStyle">@style/Apptentive.Style.Widget.Badge</item>


        <item name="apptentiveFabStyle">@style/Apptentive.Widget.ImageButton.FloatingActionButton</item>
        <item name="apptentiveToolbarStyle">@style/Apptentive.Style.Toolbar.Dark</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>


    <style name="ApptentiveBaseVersionBaseFrameStyle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/apptentive_activity_frame</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="actionBarPopupTheme">@null</item>
        <item name="actionBarTheme">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!-- Default theme used by image preview -->
    <style name="ApptentiveTheme.TranslucentStatus.FullScreen" parent="ApptentiveTheme.TranslucentStatus">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Apptentive"/>

    <style name="Apptentive.Style"/>

    <!-- General Theme override to change the Dialog design -->
    <style name="Apptentive.Style.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/apptentive_color_primary</item>
        <item name="colorPrimaryDark">@color/apptentive_color_primary_dark</item>
        <item name="colorAccent">@color/apptentive_color_accent</item>
        <item name="android:textColorPrimary">@color/apptentive_text_color_primary</item>
        <!-- Used for the background -->
    </style>

    <style name="Apptentive.Style.AlertDialog" parent="Apptentive.Style.Dialog">
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="Apptentive.Style.Toolbar.Light" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Apptentive.Style.Toolbar.Dark" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="Apptentive.Style.Widget" parent="android:Widget"/>

    <style name="Apptentive.Widget.Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:typeface">?attr/apptentiveTypeface</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="Apptentive.Style.Widget.Button.Colored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:typeface">?attr/apptentiveTypeface</item>
    </style>


    <style name="Apptentive.Style.Widget.CardView" parent="CardView">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Apptentive.Style.Widget.CardView.Message">
        <item name="android:paddingTop">@dimen/apptentive_message_center_fallback_divider_line_width</item>
        <item name="android:paddingBottom">@dimen/apptentive_message_center_fallback_divider_line_width</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="Apptentive.Style.Widget.CardView.Composing">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Apptentive.Style.Widget.CardContent"/>

    <style name="Apptentive.Style.Widget.CardContent.Outgoing">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/apptentive_message_center_outgoing_background</item>
    </style>

    <style name="Apptentive.Style.Widget.Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="Apptentive.TextAppearance.Headline" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">?attr/apptentiveTextSizeHeadline</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Headline.Inverse" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textSize">?attr/apptentiveTextSizeHeadline</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">?attr/apptentiveTextSizeTitle</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Title.Inverse" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textSize">?attr/apptentiveTextSizeTitle</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Subheading.Primary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">?attr/apptentiveTextSizeSubheading</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Subheading.Primary.Inverse" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textSize">?attr/apptentiveTextSizeSubheading</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Subheading.Secondary" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">?attr/apptentiveTextSizeSubheading</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Subheading.Secondary.Inverse" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textSize">?attr/apptentiveTextSizeSubheading</item>
        <item name="android:textColor">?android:attr/textColorSecondaryInverse</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Body" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">?attr/apptentiveTextSizeBody</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Caption" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">?attr/apptentiveTextSizeCaption</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.TextAppearance.Caption.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Apptentive.Style.TextView">
        <item name="android:typeface">?attr/apptentiveTypeface</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="Apptentive.Style.TextView.Composing"/>

    <style name="Apptentive.Style.TextView.Timestamp">
        <item name="android:minHeight">70dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:gravity">start|bottom</item>
    </style>

    <style name="Apptentive.Style.TextView.EditText">
        <item name="android:inputType">textCapSentences</item>
        <item name="android:gravity">bottom|start</item>item>
    </style>

    <style name="Apptentive.Style.TextView.EditText.Composer">
        <item name="android:singleLine">false</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:minLines">5</item>
        <item name="android:gravity">top</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Apptentive.Style.TextView.EditText.ApptentiveInteraction">
        <item name="android:background">@drawable/android_textfield_activated_holo_light</item>
        <item name="android:textSize">@dimen/apptentive_dialog_edittext</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Apptentive.Style.TextView.EditText.ApptentiveInteraction.DialogAutoCompleteTextView">
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="Apptentive.Style.TextView.EditText.ApptentiveInteraction.DialogAutoCompleteTextViewEmail">
        <item name="android:cursorVisible">true</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="Apptentive.Style.Widget.AvatarView">
        <item name="android:src">@drawable/avatar</item>
    </style>

    <style name="Apptentive.Style.Widget.AvatarView.Greeting">
        <item name="apptentive_borderColor">?android:attr/textColorPrimaryInverse</item>
        <item name="apptentive_borderWidth">2dp</item>
        <item name="apptentive_borderSpace">1.5dp</item>
    </style>

    <style name="Apptentive.Style.Widget.AvatarView.Message">
        <item name="apptentive_borderColor">?attr/colorAccent</item>
    </style>

    <style name="Apptentive.Style.Widget.Badge">
        <item name="apptentive_badgeSize">normal</item>
        <item name="apptentive_counterColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Apptentive.Widget.ImageButton" parent="Widget.AppCompat.ImageButton"/>

    <style name="Apptentive.Widget.ImageButton.Info">
        <item name="android:contentDescription">@string/apptentive_about_title</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:src">@drawable/apptentive_ic_info</item>
    </style>

    <style name="Apptentive.Widget.ImageButton.Composing">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:tint">?attr/colorAccent</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="Apptentive.Widget.ImageButton.FloatingActionButton">
        <item name="apptentive_floatingActionButtonSize">normal</item>
    </style>

    <style name="Apptentive.Widget.ImageButton.FloatingActionButton.Mini">
        <item name="apptentive_floatingActionButtonSize">mini</item>
    </style>

    <style name="Apptentive.MessageCenterMessageFrame">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingLeft">@dimen/apptentive_message_center_message_list_margin_side</item>
        <item name="android:paddingRight">@dimen/apptentive_message_center_message_list_margin_side</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Apptentive.MessageCenterMessageOutgoingProgressBar">
        <item name="android:layout_marginTop">5dp</item>
        <item name="apptentive_progressBarColor">?attr/colorAccent</item>
    </style>

    <style name="ApptentiveMessageCenterAttachmentDownloadProgressBar">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="apptentive_progressBarColor">?attr/colorAccent</item>
    </style>

    <!-- For dialog Animation -->
    <style name="ApptentiveDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>
</resources>