<resources>
    <!-- Define an empty Theme that is applied to our UI last. The host app should place styles in this theme if it wants to guarantee they take precedence. -->
    <style name="ApptentiveThemeOverride"/>

    <style name="ApptentiveBaseThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="apptentiveToolbarStyle">@style/Apptentive.Style.Toolbar.Light</item>
        <item name="android:colorBackground">@color/apptentive_color_background_light</item>

        <item name="apptentiveWindowBackground">@color/apptentive_activity_frame_light</item>
        <item name="apptentiveCardViewBackground">@color/apptentive_card_view_background_light</item>
        <item name="apptentiveDialogBackground">@drawable/apptentive_dialog_background_light</item>
        <item name="apptentiveCardBorderColor">@color/apptentive_card_border_color_light</item>
        <item name="apptentiveAttenuateColor">@color/apptentive_attenuate_color_light</item>

        <item name="apptentiveButtonTintColorDisabled">#FFD6D7D7</item>
        <item name="apptentiveButtonTintColorStateList">@color/apptentive_tinted_button_light</item>

        <item name="android:textColorPrimary">@color/apptentive_text_color_primary_light</item>
        <item name="android:textColorPrimaryInverse">@color/apptentive_text_color_primary_inverse_light</item>
        <item name="android:textColorSecondary">@color/apptentive_text_color_secondary_light</item>
        <item name="android:textColorSecondaryInverse">@color/apptentive_text_color_secondary_inverse_light</item>
        <item name="android:textColorHint">@color/apptentive_text_color_hint_light</item>
        <item name="android:textColorHintInverse">@color/apptentive_text_color_hint_inverse_light</item>
    </style>

    <style name="ApptentiveBaseThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="apptentiveToolbarStyle">@style/Apptentive.Style.Toolbar.Dark</item>
        <item name="android:colorBackground">@color/apptentive_color_background_dark</item>

        <item name="apptentiveWindowBackground">@color/apptentive_activity_frame_dark</item>
        <item name="apptentiveCardViewBackground">@color/apptentive_card_view_background_dark</item>
        <item name="apptentiveDialogBackground">@drawable/apptentive_dialog_background_dark</item>
        <item name="apptentiveCardBorderColor">@color/apptentive_card_border_color_dark</item>
        <item name="apptentiveAttenuateColor">@color/apptentive_attenuate_color_dark</item>

        <item name="apptentiveButtonTintColorDisabled">#FFD6D7D7</item>
        <item name="apptentiveButtonTintColorStateList">@color/apptentive_tinted_button_dark</item>

        <item name="android:textColorPrimary">@color/apptentive_text_color_primary_dark</item>
        <item name="android:textColorPrimaryInverse">@color/apptentive_text_color_primary_inverse_dark</item>
        <item name="android:textColorSecondary">@color/apptentive_text_color_secondary_dark</item>
        <item name="android:textColorSecondaryInverse">@color/apptentive_text_color_secondary_inverse_dark</item>
        <item name="android:textColorHint">@color/apptentive_text_color_hint_dark</item>
        <item name="android:textColorHintInverse">@color/apptentive_text_color_hint_inverse_dark</item>
    </style>

    <!-- Chooses whether Apptentive UI starts with a dark or light Theme. Host app can change this to inherit from ApptentiveBaseThemeDark. -->
    <style name="ApptentiveBaseTheme" parent="ApptentiveBaseThemeLight"/>

    <!-- This Theme is applied first before any other styles. Any styles here will be overridden by styles in the host app,
         then the ApptentiveBaseFrameTheme, then the ApptentiveThemeOverride, in that order -->
    <style name="ApptentiveTheme" parent="ApptentiveBaseTheme">

        <!-- Setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/apptentive_color_primary</item>
        <item name="colorPrimaryDark">@color/apptentive_color_primary_dark</item>
        <item name="colorAccent">@color/apptentive_color_accent</item>

        <item name="apptentiveViewBackground">?android:attr/colorBackground</item>

        <item name="apptentiveColorSnackbar">@color/apptentive_color_snackbar</item>
        <item name="apptentiveValidationFailedColor">@color/apptentive_validation_failed_color</item>
        <item name="apptentiveTextColorButtonBorderless">?attr/colorAccent</item>
        <item name="apptentiveButtonTintColor">?attr/colorAccent</item>

        <item name="apptentiveTextSizeHeadline">@dimen/apptentive_text_size_headline</item>
        <item name="apptentiveTextSizeTitle">@dimen/apptentive_text_size_title</item>
        <item name="apptentiveTextSizeSubhead">@dimen/apptentive_text_size_subhead</item>
        <item name="apptentiveTextSizeBody2">@dimen/apptentive_text_size_body_2</item>
        <item name="apptentiveTextSizeBody1">@dimen/apptentive_text_size_body_1</item>
        <item name="apptentiveTextSizeCaption">@dimen/apptentive_text_size_caption</item>
        <item name="apptentiveTextSizeButtonBorderless">@dimen/apptentive_text_size_button</item>
        <item name="apptentiveTextSizeButtonColored">@dimen/apptentive_text_size_button</item>

        <item name="apptentiveTypefaceHeadline">@integer/apptentive_typeface_sans</item>
        <item name="apptentiveTypefaceTitle">@integer/apptentive_typeface_sans</item>
        <item name="apptentiveTypefaceSubhead">@integer/apptentive_typeface_sans</item>
        <item name="apptentiveTypefaceBody2">@integer/apptentive_typeface_sans</item>
        <item name="apptentiveTypefaceBody1">@integer/apptentive_typeface_sans</item>
        <item name="apptentiveTypefaceCaption">@integer/apptentive_typeface_sans</item>
        <item name="apptentiveTypefaceButtonBorderless">@integer/apptentive_typeface_sans</item>
        <item name="apptentiveTypefaceButtonColored">@integer/apptentive_typeface_sans</item>

        <item name="apptentiveFontFamilyHeadline">@string/apptentive_font_family_headline_material</item>
        <item name="apptentiveFontFamilyTitle">@string/apptentive_font_family_title_material</item>
        <item name="apptentiveFontFamilySubhead">@string/apptentive_font_family_subhead_material</item>
        <item name="apptentiveFontFamilyBody2">@string/apptentive_font_family_body_2_material</item>
        <item name="apptentiveFontFamilyBody1">@string/apptentive_font_family_body_1_material</item>
        <item name="apptentiveFontFamilyCaption">@string/apptentive_font_family_caption_material</item>
        <item name="apptentiveFontFamilyButtonBorderless">@string/apptentive_font_family_button_material</item>
        <item name="apptentiveFontFamilyButtonColored">@string/apptentive_font_family_button_material</item>

        <!-- Here we set Apptentive widget styles -->
        <item name="apptentiveAvatarViewGreetingStyle">@style/Apptentive.Style.Widget.AvatarView.Greeting</item>
        <item name="apptentiveAvatarViewMessageStyle">@style/Apptentive.Style.Widget.AvatarView.Message</item>

        <item name="apptentiveMessageCenterBadgeStyle">@style/Apptentive.Style.Widget.Badge</item>


        <item name="apptentiveFabStyle">@style/Apptentive.Widget.ImageButton.FloatingActionButton</item>
        <item name="apptentiveToolbarStyle">@style/Apptentive.Style.Toolbar.Dark</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

        <item name="apptentiveCardViewElevation">2dp</item>

        <!-- Requires API 11 -->
        <item name="android:dialogTheme">@style/Apptentive.Style.Dialog</item>
        <item name="alertDialogTheme">@style/Apptentive.Style.AlertDialog</item>
    </style>

    <!-- Default theme used by image preview -->
    <style name="ApptentiveTheme.TranslucentStatus.FullScreen" parent="ApptentiveTheme.TranslucentStatus">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Default theme used by Apptentive about -->
    <style name="ApptentiveTheme.About" parent="ApptentiveTheme">
        <item name="colorPrimary">@color/apptentive_brand_red</item>
    </style>

    <style name="ApptentiveBaseFrameTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="actionBarPopupTheme">@null</item>
        <item name="actionBarTheme">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="ApptentiveBaseDialogTheme">
        <item name="android:windowBackground">?attr/apptentiveWindowBackground</item>
    </style>
</resources>
