<resources>
    <!-- Default Light/Dark Actionbar Theme -->
    <style name="ApptentiveDefaultTheme.Light.DarkActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="apptentiveToolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="apptentiveToolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <item name="android:colorBackground">@color/apptentive_color_background_light</item>

        <item name="apptentiveWindowBackground">@color/apptentive_activity_frame_light</item>
        <item name="apptentiveCardViewBackground">@color/apptentive_card_view_background_light</item>
        <item name="apptentiveDialogBackground">@drawable/apptentive_dialog_background_light</item>
        <item name="apptentiveCardBorderColor">@color/apptentive_card_border_color_light</item>
        <item name="apptentiveAttenuateColor">@color/apptentive_attenuate_color_light</item>

        <item name="apptentiveButtonTintColorDisabled">#FFD6D7D7</item>
        <item name="apptentiveButtonTintColorStateList">@color/apptentive_tinted_button_light</item>

        <item name="android:textColorPrimary">@color/apptentive_text_color_primary_light</item>
        <item name="android:textColorPrimaryInverse">@color/apptentive_text_color_primary_dark</item>
        <item name="android:textColorSecondary">@color/apptentive_text_color_secondary_light</item>
        <item name="android:textColorSecondaryInverse">@color/apptentive_text_color_secondary_dark</item>
        <item name="android:textColorHint">@color/apptentive_text_color_hint_light</item>
        <item name="android:textColorHintInverse">@color/apptentive_text_color_hint_inverse_light</item>
    </style>

    <!-- Default Light/Light Actionbar Theme -->
    <style name="ApptentiveDefaultTheme.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="apptentiveToolbarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="apptentiveToolbarTheme">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="android:colorBackground">@color/apptentive_color_background_light</item>

        <item name="apptentiveWindowBackground">@color/apptentive_activity_frame_light</item>
        <item name="apptentiveCardViewBackground">@color/apptentive_card_view_background_light</item>
        <item name="apptentiveDialogBackground">@drawable/apptentive_dialog_background_light</item>
        <item name="apptentiveCardBorderColor">@color/apptentive_card_border_color_light</item>
        <item name="apptentiveAttenuateColor">@color/apptentive_attenuate_color_light</item>

        <item name="apptentiveButtonTintColorDisabled">#FFD6D7D7</item>
        <item name="apptentiveButtonTintColorStateList">@color/apptentive_tinted_button_light</item>

        <item name="android:textColorPrimary">@color/apptentive_text_color_primary_light</item>
        <item name="android:textColorPrimaryInverse">@color/apptentive_text_color_primary_dark</item>
        <item name="android:textColorSecondary">@color/apptentive_text_color_secondary_light</item>
        <item name="android:textColorSecondaryInverse">@color/apptentive_text_color_secondary_dark</item>
        <item name="android:textColorHint">@color/apptentive_text_color_hint_light</item>
        <item name="android:textColorHintInverse">@color/apptentive_text_color_hint_inverse_light</item>
    </style>

    <!-- Default Dark/Dark Actionbar Theme -->
    <style name="ApptentiveDefaultTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="apptentiveToolbarPopupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="apptentiveToolbarTheme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>

        <item name="android:colorBackground">@color/apptentive_color_background_dark</item>

        <item name="apptentiveWindowBackground">@color/apptentive_activity_frame_dark</item>
        <item name="apptentiveCardViewBackground">@color/apptentive_card_view_background_dark</item>
        <item name="apptentiveDialogBackground">@drawable/apptentive_dialog_background_dark</item>
        <item name="apptentiveCardBorderColor">@color/apptentive_card_border_color_dark</item>
        <item name="apptentiveAttenuateColor">@color/apptentive_attenuate_color_dark</item>

        <item name="apptentiveButtonTintColorDisabled">#FFD6D7D7</item>
        <item name="apptentiveButtonTintColorStateList">@color/apptentive_tinted_button_dark</item>

        <item name="android:textColorPrimary">@color/apptentive_text_color_primary_dark</item>
        <item name="android:textColorPrimaryInverse">@color/apptentive_text_color_primary_light</item>
        <item name="android:textColorSecondary">@color/apptentive_text_color_secondary_dark</item>
        <item name="android:textColorSecondaryInverse">@color/apptentive_text_color_secondary_light</item>
        <item name="android:textColorHint">@color/apptentive_text_color_hint_dark</item>
        <item name="android:textColorHintInverse">@color/apptentive_text_color_hint_inverse_dark</item>
    </style>

    <!-- Chooses whether Apptentive UI defaults with a dark or light Theme. By default, Apptentive uses light theme.
      This theme will be merged with the default app material theme specified in the host app's manifest file.
     Host app should change this to inherit from ApptentiveDefaultTheme.Dark, if the app default theme is also a dark theme -->
    <style name="ApptentiveTheme" parent="ApptentiveDefaultTheme.Light.DarkActionBar"/>

    <!-- This Theme contains all attribute values shared by all api versions. Use this theme as the parent to define api specific ApptentiveTheme in values-vxx -->
    <style name="ApptentiveTheme.Base">
        <!-- Setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/apptentive_color_primary</item>
        <item name="colorPrimaryDark">@color/apptentive_color_primary_dark</item>
        <item name="colorAccent">@color/apptentive_color_accent</item>

        <item name="apptentiveToolbarBackground">?attr/colorPrimary</item>
        <item name="apptentiveToolbarTitleTextAppearance">@style/Apptentive.TextAppearance.Toolbar</item>

        <item name="apptentiveTextColorHeaderContrast">@color/apptentive_material_white</item>

        <item name="apptentiveViewBackground">?android:attr/colorBackground</item>

        <item name="apptentiveColorSnackbar">@color/apptentive_color_snackbar</item>
        <item name="apptentiveValidationFailedColor">@color/apptentive_validation_failed_color</item>
        <item name="apptentiveButtonTintColor">?attr/colorAccent</item>

        <item name="apptentiveTextSizeHeadline">@dimen/apptentive_text_size_headline</item>
        <item name="apptentiveTextSizeTitle">@dimen/apptentive_text_size_title</item>
        <item name="apptentiveTextSizeSubhead">@dimen/apptentive_text_size_subhead</item>
        <item name="apptentiveTextSizeBody2">@dimen/apptentive_text_size_body_2</item>
        <item name="apptentiveTextSizeBody1">@dimen/apptentive_text_size_body_1</item>
        <item name="apptentiveTextSizeCaption">@dimen/apptentive_text_size_caption</item>
        <item name="apptentiveTextSizeButtonBorderless">@dimen/apptentive_text_size_button</item>
        <item name="apptentiveTextSizeButtonColored">@dimen/apptentive_text_size_button</item>

        <item name="apptentiveTypefaceDefault">@integer/apptentive_typeface_normal</item>
        <item name="apptentiveTypefaceToolbar">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceHeadline">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceTitle">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceSubhead">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceBody2">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceBody1">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceCaption">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceButtonBorderless">?apptentiveTypefaceDefault</item>
        <item name="apptentiveTypefaceButtonColored">?apptentiveTypefaceDefault</item>

        <item name="apptentiveFontFamilyDefault">@string/apptentive_font_family_default_material</item>
        <item name="apptentiveFontFamilyMediumDefault">@string/apptentive_font_family_default_medium_material</item>
        <item name="apptentiveFontFamilyToolbar">?apptentiveFontFamilyDefault</item>
        <item name="apptentiveFontFamilyHeadline">?apptentiveFontFamilyDefault</item>
        <item name="apptentiveFontFamilyTitle">?apptentiveFontFamilyMediumDefault</item>
        <item name="apptentiveFontFamilySubhead">?apptentiveFontFamilyDefault</item>
        <item name="apptentiveFontFamilyBody2">?apptentiveFontFamilyMediumDefault</item>
        <item name="apptentiveFontFamilyBody1">?apptentiveFontFamilyDefault</item>
        <item name="apptentiveFontFamilyCaption">?apptentiveFontFamilyDefault</item>
        <item name="apptentiveFontFamilyButtonBorderless">?apptentiveFontFamilyMediumDefault</item>
        <item name="apptentiveFontFamilyButtonColored">?apptentiveFontFamilyMediumDefault</item>

        <!-- Here we set Apptentive widget styles -->
        <item name="apptentiveAvatarViewGreetingStyle">@style/Apptentive.Style.Widget.AvatarView.Greeting</item>
        <item name="apptentiveAvatarViewMessageStyle">@style/Apptentive.Style.Widget.AvatarView.Message</item>
        <item name="apptentiveMessageCenterBadgeStyle">@style/Apptentive.Style.Widget.Badge</item>
        <item name="apptentiveFabStyle">@style/Apptentive.Widget.ImageButton.FloatingActionButton</item>

        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>

        <item name="apptentiveCardViewElevation">2dp</item>
    </style>

    <!-- This is THE apptentive default theme speficied in AndroidManifest.xml of Apptentive SDK.
         It will be applied first. Any styles here will be then overridden by styles defined in the
         default AppCompat theme of the host app,  then the ApptentiveBaseFrameTheme, then the
         ApptentiveThemeOverride, in that order.
         Note this theme is the base default theme shared by all Android api versions, thus the name "Shared".
         Any attribute listed will have different values in values-vxx folder
    -->
    <style name="ApptentiveTheme.Base.Versioned">
        <!-- Use static color by default, and ColorStateList on post-2 -->
        <item name="apptentiveTextColorButtonBorderless">?attr/colorAccent</item>
    </style>

    <style name="ApptentiveTheme.Base.Versioned.TranslucentStatus"/>

    <!-- Default theme used by image preview -->
    <style name="ApptentiveTheme.Base.Versioned.TranslucentStatus.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Default theme used by Apptentive about -->
    <style name="ApptentiveTheme.Base.Versioned.About">
        <item name="colorPrimary">@color/apptentive_brand_red</item>
    </style>

    <!-- Default theme values that Apptentive interactions will always use, It won't be overridden by the app default theme -->
    <style name="ApptentiveBaseFrameTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="windowActionModeOverlay">false</item>
        <item name="actionBarPopupTheme">@null</item>
        <item name="actionBarTheme">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!-- Requires API 11 -->
        <item name="android:dialogTheme">@style/Apptentive.Style.Dialog</item>
        <item name="alertDialogTheme">@style/Apptentive.Style.AlertDialog</item>
    </style>

    <style name="ApptentiveBaseDialogTheme">
        <item name="android:windowBackground">?attr/apptentiveWindowBackground</item>
    </style>
</resources>
