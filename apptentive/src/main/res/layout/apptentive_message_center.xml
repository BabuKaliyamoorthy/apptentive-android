<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
        <com.apptentive.android.sdk.module.messagecenter.view.MessageCenterListView android:id="@+id/message_list"
                                                                                    android:layout_width="match_parent"
                                                                                    android:layout_height="match_parent"
                                                                                    android:background="?attr/apptentiveWindowBackground"
                                                                                    android:cacheColorHint="@color/apptentive_transparency"
                                                                                    android:clipToPadding="false"
                                                                                    android:descendantFocusability="afterDescendants"
                                                                                    android:scrollbars="vertical"
                                                                                    android:paddingBottom="@dimen/apptentive_message_center_bottom_padding"/>
    <com.apptentive.android.sdk.view.FloatingActionButton android:id="@+id/composing_fab"
                                                          android:layout_width="wrap_content"
                                                          android:layout_height="wrap_content"
                                                          android:layout_alignParentBottom="true"
                                                          android:layout_alignParentEnd="true"
                                                          android:layout_alignParentRight="true"
                                                          android:layout_marginBottom="@dimen/apptentive_message_center_fab_height"
                                                          android:layout_marginRight="@dimen/apptentive_message_center_fab_right"
                                                          style="?attr/apptentiveFabStyle"
                                                          android:src="@drawable/ic_edit"/>
</RelativeLayout>