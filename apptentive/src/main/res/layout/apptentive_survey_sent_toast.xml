<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/survey_sent_toast_root"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:minHeight="48dp"
              android:maxHeight="80dp"
              android:gravity="bottom"
              android:orientation="vertical">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="24dp"
                  android:background="#323232"
                  android:gravity="center_vertical|start"
                  android:orientation="horizontal">
        <android.support.v7.widget.AppCompatImageView android:layout_width="wrap_content"
                                                      android:layout_height="wrap_content"
                                                      android:src="@drawable/apptentive_checkmark_alt_40dp"/>
        <TextView android:id="@+id/survey_sent_toast_text"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="24dp"
                  android:paddingStart="24dp"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>