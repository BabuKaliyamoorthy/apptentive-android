<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/choice"
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:gravity="center_vertical">
    <!-- It is important to use saveEnabled=false here so that Android doesn't mess with our manual state saving. -->
    <CheckBox android:id="@+id/checkbox"
              style="ApptentiveTheme.TextAppearence"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:textColor="@color/apptentive_survey_question_answer_text"
              android:textSize="@dimen/apptentive_text_small"/>
</FrameLayout>