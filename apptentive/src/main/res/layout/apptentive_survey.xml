<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout android:id="@+id/appbar"
                                                android:layout_width="match_parent"
                                                android:layout_height="196dp"
                                                android:fitsSystemWindows="true"
                                                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout android:id="@+id/main.collapsing"
                                                               android:layout_width="match_parent"
                                                               android:layout_height="wrap_content"
                                                               app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="?attr/actionBarSize"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="16dp">
                <Space android:layout_width="match_parent"
                       android:layout_height="?attr/actionBarSize"/>
                <TextView android:id="@+id/description"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_alignParentTop="true"
                          android:textColor="#FFFFFF"
                          android:textSize="18sp"
                          android:text="Please answer a couple of questions to help us make this app better for you!"/>
                <ImageButton android:id="@+id/info"
                             android:layout_width="@dimen/apptentive_message_center_icon_dimension"
                             android:layout_height="@dimen/apptentive_message_center_icon_dimension"
                             android:layout_alignParentRight="true"
                             android:layout_alignParentBottom="true"
                             android:contentDescription="About"
                             android:background="?android:attr/selectableItemBackground"
                             android:src="@drawable/apptentive_ic_info"/>

            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>


    <android.support.v4.widget.NestedScrollView android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:background="#F4F4F4"
                                                app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout android:id="@+id/questions"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <!-- Questions are added here -->
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.Toolbar android:id="@+id/title"
                                       android:layout_width="match_parent"
                                       android:layout_height="?attr/actionBarSize"
                                       android:background="?attr/colorPrimary"
                                       android:navigationIcon="@drawable/apptentive_abc_ic_ab_back_mtrl_am_alpha"
                                       app:titleTextColor="@android:color/primary_text_dark"
                                       app:navigationIcon="@drawable/apptentive_abc_ic_ab_back_mtrl_am_alpha"
                                       app:title="Survey Title"
                                       app:layout_anchor="@id/appbar"
                                       app:layout_anchorGravity="top"/>


    <!--
        <Button android:id="@+id/send"
                style="@style/ApptentiveTheme.TextAppearence.ApptentiveInteractionPositiveButton"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:text="@string/apptentive_survey_send_response"/>
    -->

</android.support.design.widget.CoordinatorLayout>
