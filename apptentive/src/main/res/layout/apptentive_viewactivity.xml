<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.apptentive.android.sdk.ApptentiveViewActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/apptentive_toolbar"
        android:minHeight="?attr/actionBarSize"
        style="?attr/apptentiveToolbarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <FrameLayout
        android:id="@+id/apptentive_vp_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/apptentive_toolbar">
    <android.support.v4.view.ViewPager
        android:id="@+id/apptentive_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </FrameLayout>
</RelativeLayout>