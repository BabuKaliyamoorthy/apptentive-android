<resources>
    <style name="Apptentive.Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/apptentive_activity_frame</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="apptentiveAvatarViewGreetingStyle">@style/ApptentiveAvatarView.Greeting</item>
        <item name="apptentiveAvatarViewMessageStyle">@style/ApptentiveAvatarView.Message</item>
        <item name="apptentiveTintColor">@color/apptentive_tint_color</item>
    </style>

    <style name="ApptentiveInteractionPositiveButton">
        <item name="android:background">@drawable/apptentive_dialog_positive_button</item>
        <item name="android:textColor">@drawable/apptentive_dialog_positive_button_text</item>
        <item name="android:textSize">@dimen/apptentive_dialog_button_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ApptentiveInteractionNegativeButton">
        <item name="android:background">@drawable/apptentive_dialog_negative_button</item>
        <item name="android:textColor">@drawable/apptentive_dialog_negative_button_text</item>
        <item name="android:textSize">@dimen/apptentive_dialog_button_text</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ApptentiveInteractionDialogBody">
        <item name="android:textColor">@color/apptentive_dialog_body_text</item>
        <item name="android:textSize">@dimen/apptentive_dialog_body_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:autoLink">all</item>
    </style>

    <style name="ApptentiveInteractionEditText">
        <item name="android:background">@drawable/android_textfield_activated_holo_light</item>
        <item name="android:textColor">@color/apptentive_dialog_form_text</item>
        <item name="android:textColorHint">@color/apptentive_dialog_hint_text</item>
        <item name="android:textSize">@dimen/apptentive_dialog_edittext</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:gravity">bottom|left</item>item>
    </style>

    <style name="ApptentiveButtonClickArea">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="ApptentiveInteractionDialogTopArea">
        <item name="android:paddingTop">@dimen/apptentive_dialog_content_padding_top</item>
        <item name="android:paddingBottom">@dimen/apptentive_dialog_content_padding_bottom</item>
        <item name="android:paddingLeft">@dimen/apptentive_dialog_content_padding_left</item>
        <item name="android:paddingRight">@dimen/apptentive_dialog_content_padding_right</item>
        <item name="android:background">@drawable/apptentive_dialog_top_area_background</item>
    </style>

    <style name="ApptentiveDialogTitle">
        <item name="android:textSize">@dimen/apptentive_dialog_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/apptentive_dialog_title_text</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ApptentiveDialogBody">
        <item name="android:paddingTop">@dimen/apptentive_dialog_content_spacing</item>
        <item name="android:textSize">@dimen/apptentive_dialog_body_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/apptentive_dialog_body_text</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="ApptentiveDialogBottomArea">
        <item name="android:paddingTop">@dimen/apptentive_dialog_buttons_padding_top</item>
        <item name="android:paddingBottom">@dimen/apptentive_dialog_buttons_padding_bottom</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:background">@drawable/apptentive_dialog_bottom_area_background</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="ApptentiveDialogButtonText">
        <item name="android:paddingLeft">@dimen/apptentive_dialog_button_padding_left</item>
        <item name="android:paddingRight">@dimen/apptentive_dialog_button_padding_right</item>
        <item name="android:minWidth">@dimen/apptentive_dialog_button_visible_area_min_width</item>
        <item name="android:minHeight">@dimen/apptentive_dialog_button_visible_area_min_height</item>
        <item name="android:background">@drawable/apptentive_dialog_button</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/apptentive_dialog_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/apptentive_dialog_button_text</item>
    </style>

    <style name="ApptentiveInteractionDialogAutoCompleteTextView" parent="ApptentiveInteractionEditText">
        <item name="android:cursorVisible">true</item>
    </style>

    <style name="ApptentiveInteractionDialogAutoCompleteTextViewEmail"
           parent="ApptentiveInteractionDialogAutoCompleteTextView">
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:completionThreshold">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="ApptentiveAvatarView">
        <item name="android:src">@drawable/avatar</item>
        <item name="borderColor">?apptentiveTintColor</item>
    </style>

    <style name="ApptentiveAvatarView.Greeting">
        <item name="borderWidth">2dp</item>
        <item name="borderSpace">1.5dp</item>
    </style>

    <style name="ApptentiveAvatarView.Message">
    </style>

    <style name="ApptentiveMessageCenterGreetingContainer">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:paddingLeft">@dimen/apptentive_message_center_greeting_side_margin</item>
        <item name="android:paddingRight">@dimen/apptentive_message_center_greeting_side_margin</item>
        <item name="android:background">@color/apptentive_message_center_greeting_background</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">@integer/apptentive_message_center_greeting_orientation</item>
    </style>

    <style name="ApptentiveMessageCenterGreetingTitle">
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">@integer/apptentive_message_center_greeting_text_gravity</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?attr/apptentiveTintColor</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="ApptentiveMessageCenterGreetingBody">
        <item name="android:paddingTop">8dp</item>
        <item name="android:gravity">@integer/apptentive_message_center_greeting_text_gravity</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#949494</item>
        <item name="android:textSize">16dp</item>
    </style>
</resources>