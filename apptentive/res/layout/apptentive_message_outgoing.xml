<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:apptentive="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             style="@style/MessageCenterMessageFrame">
    <FrameLayout android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 style="@style/ApptentiveMessageCenterMessageBorder">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/apptentive_message_center_outgoing_background"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          style="@style/ApptentiveMessageCenterMessageOutgoingBackground">
                <FrameLayout android:id="@+id/body"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"/>
                <TextView android:id="@+id/timestamp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          style="@style/ApptentiveMessageCenterMessageTimestamp"/>
            </LinearLayout>
            <com.apptentive.android.sdk.view.ApptentiveMaterialIndeterminateProgressBar android:id="@+id/progressBar"
                                                                                        android:layout_width="fill_parent"
                                                                                        android:layout_height="16dp"
                                                                                        style="@style/ApptentiveMessageCenterMessageOutgoingProgressBar"/>
        </LinearLayout>
    </FrameLayout>
</FrameLayout>
