<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/apptentive_header_height"
                style="@style/ApptentiveFullscreenHeader">
    <FrameLayout android:id="@+id/back_button"
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/apptentive_header_button_height"
                 android:layout_alignParentLeft="true"
                 style="@style/ApptentiveButtonClickArea">
        <ImageView android:layout_width="@dimen/apptentive_header_button_height"
                   android:layout_height="fill_parent"
                   style="@style/ApptentiveFullscreenHeaderButtonVisibleArea"
                   android:src="@drawable/apptentive_ic_arrow_back_black_24dp"
                   android:contentDescription="Back"/>
    </FrameLayout>
    <TextView android:id="@+id/title"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:layout_toRightOf="@id/back_button"
              android:layout_marginLeft="@dimen/apptentive_header_title_margin_left"
              android:layout_marginRight="@dimen/apptentive_header_title_margin_right"
              style="@style/ApptentiveFullscreenHeaderTitle"
              android:visibility="gone"/>
    <FrameLayout android:id="@+id/button"
                 android:layout_width="wrap_content"
                 android:layout_height="@dimen/apptentive_header_button_height"
                 android:layout_alignParentRight="true"
                 style="@style/ApptentiveButtonClickArea"
                 android:visibility="gone">
        <TextView android:id="@+id/label"
                  android:layout_width="wrap_content"
                  android:layout_height="fill_parent"
                  android:layout_gravity="center"
                  style="@style/ApptentiveFullscreenHeaderButtonVisibleArea"/>
    </FrameLayout>
</RelativeLayout>
