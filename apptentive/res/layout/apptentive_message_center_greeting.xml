<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:apptentive="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="24dp"
              android:paddingBottom="24dp"
              android:gravity="center"
              android:orientation="horizontal"
              android:background="@color/apptentive_message_center_greeting_background">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="@dimen/apptentive_message_center_greeting_side_margin"
                  android:layout_marginRight="@dimen/apptentive_message_center_greeting_side_margin"
                  android:gravity="center"
                  android:orientation="@integer/apptentive_message_center_greeting_orientation">
        <com.apptentive.android.sdk.module.messagecenter.view.ApptentiveAvatarView android:id="@+id/avatar"
                                                                                   style="@style/ApptentiveAvatarView.Greeting"
                                                                                   android:layout_width="88dp"
                                                                                   android:layout_height="88dp"/>
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingLeft="@dimen/apptentive_message_center_greeting_text_padding_left"
                      android:orientation="vertical">
            <TextView android:id="@+id/title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:gravity="@integer/apptentive_message_center_greeting_text_gravity"
                      android:textStyle="normal"
                      android:textColor="#EF4139"
                      android:textSize="24dp"/>
            <TextView android:id="@+id/body"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="8dp"
                      android:gravity="@integer/apptentive_message_center_greeting_text_gravity"
                      android:textStyle="normal"
                      android:textColor="#949494"
                      android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
