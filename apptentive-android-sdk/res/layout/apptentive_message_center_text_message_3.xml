<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:baselineAligned="false"
              android:background="@android:color/transparent"
              android:padding="3dp">
    <LinearLayout android:id="@+id/apptentive_message_center_message_background"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:paddingTop="3dp"
                  android:paddingBottom="5dp"
                  android:baselineAligned="false"
                  android:background="@android:color/transparent">
        <LinearLayout android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:paddingLeft="10dp"
                      android:paddingRight="10dp"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <TextView android:id="@+id/apptentive_message_sender"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="0dp"
                          android:textSize="16sp"
                          android:textStyle="bold"
                          android:textColor="@color/apptentive_message_sender_text_color"/>
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"/>
                <TextView android:id="@+id/apptentive_message_timestamp"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:padding="0dp"
                          android:textSize="9sp"
                          android:textStyle="bold"
                          android:textColor="@color/apptentive_message_center_timestamp"/>
            </LinearLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">
                <FrameLayout android:id="@+id/apptentive_message_avatar_left"
                             android:layout_width="40dp"
                             android:layout_height="40dp"
                             android:layout_marginRight="5dp"
                             android:visibility="gone"/>
                <TextView android:id="@+id/apptentive_message_center_text_message_text"
                          android:layout_width="0px"
                          android:layout_height="wrap_content"
                          android:layout_weight="1"
                          android:textColor="@color/apptentive_text_message_text_color"
                          android:gravity="center_vertical"/>
                <FrameLayout android:id="@+id/apptentive_message_avatar_right"
                             android:layout_width="40dp"
                             android:layout_height="40dp"
                             android:layout_marginLeft="5dp"
                             android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>