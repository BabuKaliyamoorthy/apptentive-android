<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/apptentive_pinstripe_background">
	<ViewFlipper android:id="@+id/apptentive_activity_about_flipper"
	             android:layout_width="fill_parent"
	             android:layout_height="fill_parent">
		<LinearLayout android:id="@+id/blahblah"
		              android:orientation="vertical"
		              android:layout_width="fill_parent"
		              android:layout_height="fill_parent">
			<ViewFlipper android:id="@+id/apptentive_content_flipper"
			             android:layout_width="fill_parent"
			             android:layout_height="0dp"
			             android:layout_weight="1">
				<LinearLayout android:id="@+id/apptentive_page_one"
				              android:orientation="vertical"
				              android:layout_width="fill_parent"
				              android:layout_height="fill_parent">
					<RelativeLayout android:id="@+id/apptentive_action_bar_one"
					                android:orientation="horizontal"
					                android:layout_width="fill_parent"
					                android:layout_height="wrap_content"
					                android:background="@drawable/apptentive_header_background">
						<Button android:id="@+id/apptentive_button_cancel"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:layout_marginLeft="4dp"
						        android:paddingLeft="10dp"
						        android:paddingTop="6dp"
						        android:paddingRight="10dp"
						        android:paddingBottom="6dp"
						        android:textColor="#EEEEEE"
						        android:textSize="16sp"
						        android:textStyle="bold"
						        android:background="@drawable/apptentive_header_button"
						        android:text="@string/apptentive_button_cancel_text"/>
						<TextView android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:layout_centerInParent="true"
						          android:textStyle="bold"
						          android:textSize="20sp"
						          android:textColor="#FFFFFF"
						          android:text="@string/apptentive_header_one_text"/>
						<Button android:id="@+id/apptentive_button_next"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentRight="true"
						        android:layout_marginRight="4dp"
						        android:paddingLeft="10dp"
						        android:paddingTop="6dp"
						        android:paddingRight="10dp"
						        android:paddingBottom="6dp"
						        android:textColor="#EEEEEE"
						        android:textSize="18sp"
						        android:textStyle="bold"
						        android:background="@drawable/apptentive_header_button"
						        android:text="@string/apptentive_button_next_text"/>
					</RelativeLayout>
					<EditText android:id="@+id/apptentive_feedback_text"
					          android:layout_width="fill_parent"
					          android:layout_height="0px"
					          android:layout_weight="1"
					          android:gravity="top"
					          android:inputType="textMultiLine"
					          android:hint="@string/apptentive_edittext_feedback_text"/>
					<EditText android:id="@+id/apptentive_feedback_user_email"
					          android:layout_width="fill_parent"
					          android:layout_height="wrap_content"
					          android:singleLine="true"
					          android:inputType="textEmailAddress"
					          android:hint="@string/apptentive_edittext_email_text"/>
				</LinearLayout>
				<LinearLayout android:id="@+id/apptentive_page_two"
				              android:orientation="vertical"
				              android:layout_width="fill_parent"
				              android:layout_height="fill_parent">
					<RelativeLayout android:id="@+id/apptentive_action_bar_two"
					                android:orientation="horizontal"
					                android:layout_width="fill_parent"
					                android:layout_height="wrap_content"
					                android:background="@drawable/apptentive_header_background">
						<Button android:id="@+id/apptentive_button_back"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentLeft="true"
						        android:layout_marginLeft="4dp"
						        android:paddingLeft="10dp"
						        android:paddingTop="6dp"
						        android:paddingRight="10dp"
						        android:paddingBottom="6dp"
						        android:textColor="#EEEEEE"
						        android:textSize="14sp"
						        android:textStyle="bold"
						        android:background="@drawable/apptentive_header_button"
						        android:text="@string/apptentive_back"/>
						<TextView android:layout_width="wrap_content"
						          android:layout_height="wrap_content"
						          android:layout_centerInParent="true"
						          android:textStyle="bold"
						          android:textSize="20sp"
						          android:textColor="#FFFFFF"
						          android:text="@string/apptentive_header_two_text"/>
						<Button android:id="@+id/apptentive_button_submit"
						        android:layout_width="wrap_content"
						        android:layout_height="wrap_content"
						        android:layout_centerVertical="true"
						        android:layout_alignParentRight="true"
						        android:layout_marginRight="4dp"
						        android:paddingLeft="10dp"
						        android:paddingTop="6dp"
						        android:paddingRight="10dp"
						        android:paddingBottom="6dp"
						        android:textColor="#EEEEEE"
						        android:textSize="14sp"
						        android:textStyle="bold"
						        android:background="@drawable/apptentive_header_button"
						        android:text="@string/apptentive_send"/>
					</RelativeLayout>
					<EditText android:id="@+id/apptentive_feedback_user_name"
					          android:layout_width="fill_parent"
					          android:layout_height="wrap_content"
					          android:singleLine="true"
					          android:inputType="textPersonName"
					          android:hint="@string/apptentive_edittext_name_text"/>
					<EditText android:id="@+id/apptentive_feedback_user_phone"
					          android:layout_width="fill_parent"
					          android:layout_height="wrap_content"
					          android:singleLine="true"
					          android:inputType="phone"
					          android:hint="@string/apptentive_edittext_phone_text"/>
				</LinearLayout>
			</ViewFlipper>
			<LinearLayout android:id="@+id/apptentive_branding_view"
			              android:layout_width="fill_parent"
			              android:layout_height="wrap_content"
			              android:clickable="true">
				<TextView android:text="@string/apptentive_branding_text"
				          android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:textColor="#888888"/>
			</LinearLayout>
		</LinearLayout>
		<LinearLayout android:id="@+id/apptentive_about_view"
		              android:orientation="vertical"
		              android:layout_width="fill_parent"
		              android:layout_height="fill_parent">
			<RelativeLayout android:orientation="horizontal"
			                android:layout_width="fill_parent"
			                android:layout_height="wrap_content"
			                android:background="@drawable/apptentive_header_background">
				<TextView android:layout_width="wrap_content"
				          android:layout_height="wrap_content"
				          android:layout_centerInParent="true"
				          android:textStyle="bold"
				          android:text="About Apptentive"
				          android:textSize="8pt"
				          android:textColor="#FFFFFF"/>
				<Button android:id="@+id/apptentive_button_about_okay"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_centerVertical="true"
				        android:layout_alignParentRight="true"
				        android:layout_marginRight="4dp"
				        android:paddingLeft="9dp"
				        android:paddingTop="6dp"
				        android:paddingRight="9dp"
				        android:paddingBottom="6dp"
				        android:textColor="#EEEEEE"
				        android:textSize="7pt"
				        android:textStyle="bold"
				        android:background="@drawable/apptentive_header_button"
				        android:text="@string/apptentive_header_button_about_okay_text"/>
			</RelativeLayout>
			<ImageView android:layout_width="fill_parent"
			           android:layout_height="wrap_content"
			           android:maxHeight="10dp"
			           android:layout_gravity="center_horizontal"
			           android:paddingTop="15dp"
			           android:paddingBottom="15dp"
			           android:src="@drawable/apptentive_logo_bitmap"/>
			<TextView android:layout_width="fill_parent"
			          android:layout_height="wrap_content"
			          android:paddingTop="10dp"
			          android:paddingLeft="30dp"
			          android:paddingRight="30dp"
			          android:textSize="7pt"
			          android:textColor="#000000"
			          android:text="Apptentive is an in-app feedback mechanism which allows app developers to quickly get feedback from customers."/>
			<TextView android:layout_width="fill_parent"
			          android:layout_height="wrap_content"
			          android:paddingTop="10dp"
			          android:paddingLeft="30dp"
			          android:paddingRight="30dp"
			          android:autoLink="web"
			          android:textColor="#004444"
			          android:textSize="6pt"
			          android:textStyle="bold"
			          android:text="Find out more at apptentive.com"/>
			<TextView android:layout_width="fill_parent"
			          android:layout_height="wrap_content"
			          android:layout_gravity="left"
			          android:paddingTop="10dp"
			          android:paddingLeft="15dp"
			          android:paddingRight="30dp"
			          android:textColor="#004444"
			          android:textStyle="bold"
			          android:textSize="7pt"
			          android:text="Running Tasks"/>
			<TextView android:layout_width="fill_parent"
			          android:layout_height="wrap_content"
			          android:layout_gravity="center_horizontal"
			          android:paddingTop="10dp"
			          android:paddingLeft="30dp"
			          android:paddingRight="30dp"
			          android:textColor="#000000"
			          android:textSize="7pt"
			          android:text="No feedback waiting to upload."/>
		</LinearLayout>
	</ViewFlipper>
	<ScrollView android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:background="#CCCC00"
	            android:layout_below="@id/blahblah">
	</ScrollView>
</LinearLayout>